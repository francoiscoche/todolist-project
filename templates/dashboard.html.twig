{% extends 'base.html.twig' %}
{% block title %}
    Hello World
{% endblock %}
{% block body %} {# On vient surcharger le block body d√©clarer dans base.html.body #}
    {# <h1>Hello world</h1> #}
       <div class="col-md-3 offset-md-2 left-column nb-1">
            <ul class="list-group">
                {% for task in listingTasks %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href={{ path('listing_show', { taskId: task.id }) }}>
                        {{ task.name }}
                    </a>
                </li>
                {% endfor %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <form method="post" action="{{ path('listing_create') }}">
                        <div class="input-group">  {# affichage sur une ligne #}
                            <input type="text" placeholder="Ajouter une liste" class="form-control input-block-level" name="name" />
                            <div class="input-group-append">  {# juste derriere le input #}
                                <button class="btn btn-outline-primary" type="submit">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </li>
            </ul>
        </div>
        <div class="col-md-5 list mb-1">
            {% if(currentTask) %}
                <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
                    <a class="navbar-brand" href="#">{{ currentTask.name }}</a>

                    <a href={{ path("listing_delete", { taskId: currentTask.id }) }}><i class="fa fa-trash"></i></a>
                </nav>
            {% endif %}
        </div>
{% endblock %}